<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_bg">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll"
            android:layout_height="wrap_content"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Profile"
                            android:textColor="@color/white"
                            android:fontFamily="@font/raleway_bold"
                            android:textSize="20dp" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/admin_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:drawablePadding="12dp"
                        android:maxLength="50"
                        android:hint="Full Name"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/white"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:background="@drawable/rounded"
                        android:textColorHint="@color/white"
                        android:drawableLeft="@drawable/ic_person_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/admin_organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:maxLength="50"
                        android:inputType="number"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="Organization"
                        android:enabled="false"
                        android:maxLines="1"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/rounded"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawableLeft="@drawable/ic_person_black_24dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/admin_date_of_birth"
                        android:layout_width="196dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:drawablePadding="12dp"
                        android:hint="Date of Birth"
                        android:inputType="number"
                        android:fontFamily="@font/raleway_medium"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/calender"
                        android:background="@drawable/rounded"
                        android:textColorHint="@color/white"
                        android:drawableLeft="@drawable/calender" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:id="@+id/pickdob"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/calender"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/admin_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:maxLength="50"
                        android:textColorHint="@color/white"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:fontFamily="@font/raleway_medium"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="Email"
                        android:drawableStart="@drawable/email"
                        android:background="@drawable/rounded"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/admin_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/white"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                        android:hint="Mobile Number"
                        android:fontFamily="@font/raleway_medium"
                        android:enabled="false"
                        android:background="@drawable/rounded"
                        android:layout_marginStart="30dp"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/admin_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:maxLength="50"
                        android:inputType="text"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="Address"
                        android:fontFamily="@font/raleway_medium"
                        android:background="@drawable/rounded"
                        android:layout_marginStart="30dp"
                        android:drawableStart="@drawable/ic_edit_location_black_24dp"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/ic_edit_location_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/admin_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:maxLength="50"
                        android:inputType="text"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:hint="Designation"
                        android:fontFamily="@font/raleway_medium"
                        android:background="@drawable/rounded"
                        android:layout_marginStart="30dp"
                        android:drawableStart="@drawable/bike"
                        android:textColorHint="@color/white"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/bike" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/admin_update_button"
                        android:text="Update"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/register_back"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/raleway_bold"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>