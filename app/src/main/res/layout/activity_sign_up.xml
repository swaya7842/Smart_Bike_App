<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_bg"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="wrap_content"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_bold"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="12dp"
                    android:maxLength="50"
                    android:hint="Full Name"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/white"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:background="@drawable/rounded"
                    android:textColorHint="@color/white"
                    android:drawableLeft="@drawable/ic_person_black_24dp" />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/owner_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLength="12"
            android:inputType="text"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:hint="Owner Id"
            android:maxLines="1"
            android:layout_marginStart="30dp"
            android:background="@drawable/rounded"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp" />



    </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/date_of_birth"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="12dp"
                    android:hint="Date of Birth"
                    android:fontFamily="@font/raleway_medium"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/calender"
                    android:background="@drawable/rounded"
                    android:textColorHint="@color/white"
                    android:drawableLeft="@drawable/calender" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/pickdob"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/calender"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLength="50"
                    android:textColorHint="@color/white"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/raleway_medium"
                    android:drawablePadding="12dp"
                    android:padding="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Email"
                    android:drawableStart="@drawable/email"
                    android:background="@drawable/rounded"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/email" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/white"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="10dp"
                    android:maxLength="10"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
                    android:hint="Mobile Number"
                    android:background="@drawable/rounded"
                    android:layout_marginStart="30dp"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_phone_iphone_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLength="50"
                    android:inputType="textPostalAddress"
                    android:drawablePadding="12dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/raleway_medium"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Address"
                    android:background="@drawable/rounded"
                    android:layout_marginStart="30dp"
                    android:drawableStart="@drawable/ic_edit_location_black_24dp"
                    android:textColorHint="@color/white"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_edit_location_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLength="50"
                    android:inputType="text"
                    android:drawablePadding="12dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Model Name"
                    android:fontFamily="@font/raleway_medium"
                    android:background="@drawable/rounded"
                    android:layout_marginStart="30dp"
                    android:drawableStart="@drawable/bike"
                    android:textColorHint="@color/white"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/bike" />

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/chassis_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLength="10"
            android:inputType="text"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:background="@drawable/rounded"
            android:layout_marginStart="30dp"
            android:drawableStart="@drawable/bike"
            android:textColor="@color/white"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway_medium"
            android:layout_marginRight="30dp"
            android:hint="Vehicle Identification Number"
            android:textColorHint="@color/white"
            android:maxLines="1"
            android:drawableLeft="@drawable/bike" />
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/date_of_purchase"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="12dp"
                    android:hint="Date of Purchase"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:fontFamily="@font/raleway_medium"
                    android:drawableStart="@drawable/calender"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded"
                    android:drawableLeft="@drawable/calender" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/pickdop"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/calender"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/vehicle_registration_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLength="15"
                    android:inputType="text"
                    android:drawablePadding="12dp"
                    android:padding="10dp"
                    android:drawableStart="@drawable/bike"
                    android:textColor="@color/white"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/rounded"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Vehicle Registration Number"
                    android:textColorHint="@color/white"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/bike" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxLength="8"
                    android:inputType="textPassword"
                    android:drawablePadding="12dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:hint="Password"
                    android:fontFamily="@font/raleway_medium"
                    android:maxLines="1"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/rounded"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawableLeft="@drawable/ic_lock" />



            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/register_back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                />
        </LinearLayout>
</LinearLayout>

    </ScrollView>
    </RelativeLayout>

</RelativeLayout>